{
  "name": "govee-mcp-server",
  "version": "1.0.0",
  "description": "MCP-compatible HTTP service for controlling Govee smart bulbs",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "docker:build": "docker build -t govee-mcp-server .",
    "docker:test": "./scripts/test-docker-build.sh",
    "docker-compose:test": "./scripts/test-docker-compose.sh"
  },
  "keywords": [
    "govee",
    "mcp",
    "smart-home",
    "iot"
  ],
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^2.0.2",
    "eslint": "^8.57.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2"
  }
}

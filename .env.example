# Govee MCP Server Environment Variables
# Copy this file to .env and fill in the values

# Required: Your Govee API key from https://developer.govee.com/
GOVEE_API_KEY=your-api-key-here

# Optional: Comma-separated list of valid MCP client tokens for authentication
# If not set, authentication is disabled
MCP_CLIENT_TOKENS=token1,token2

# Optional: Server port (default: 3000)
PORT=3000

# Optional: Device cache TTL in milliseconds (default: 300000 = 5 minutes)
DEVICE_CACHE_TTL_MS=300000

# Optional: Rate limiting settings
PER_CLIENT_RATE_LIMIT=100
RATE_LIMIT_WINDOW_MS=60000

# Optional: Retry settings for Govee API calls
MAX_RETRIES=3
INITIAL_BACKOFF_MS=1000
MAX_BACKOFF_MS=30000

# Optional: Command coalescing window in milliseconds (default: 200)
COALESCE_WINDOW_MS=200

# Optional: Log level (default: info)
# Values: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
